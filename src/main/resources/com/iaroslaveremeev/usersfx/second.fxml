<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iaroslaveremeev.usersfx.MainController">
    <MenuBar prefHeight="26.0" prefWidth="376.0">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#buttonFileOpen" text="Open">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Save">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <Label fx:id="welcomeText" />
    <ComboBox fx:id="usersRepoComboBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="400.0">
        <VBox.margin>
            <Insets />
        </VBox.margin></ComboBox>
    <Button fx:id="buttonUserChosen" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onButtonClick" prefHeight="25.0" prefWidth="148.0" text="Choose this employee!" textAlignment="CENTER">
        <VBox.margin>
            <Insets />
        </VBox.margin></Button>
    <Label prefHeight="25.0" prefWidth="267.0" text="Lists of the employees you chose by their job:">
        <font>
            <Font size="14.0" />
        </font>
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </Label>
    <ListView fx:id="chosenUsersList" maxHeight="200.0" maxWidth="-Infinity" minHeight="25.0" minWidth="-Infinity" prefHeight="25.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets />
        </VBox.margin></ListView>
    <Button fx:id="JsonMakerButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onJsonMakerButtonClick" prefHeight="25.0" prefWidth="140.0" text="Make JSON from list" textAlignment="CENTER">
        <VBox.margin>
            <Insets />
        </VBox.margin></Button>
    <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#buttonNewForm" prefHeight="25.0" prefWidth="180.0" text="Go check the users part" textAlignment="CENTER">
        <VBox.margin>
            <Insets bottom="30.0" />
        </VBox.margin></Button>
</VBox>
